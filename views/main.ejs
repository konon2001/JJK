<!DOCTYPE html>
<html data-ng-app="myApp">
<head>
    <script src = "http://code.jquery.com/jquery-1.7.1.js"></script>
    <script src = "/socket.io/socket.io.js"></script>
    <title>Customer Manager</title>

    <link type="text/css" rel="stylesheet" href="css/stylesheet.css" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css">
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/public/css/landing-page.css" rel="stylesheet">

    <!-- Vendor Libs: jQuery only used for Bootstrap functionality -->
    <script src="/lib/angular-1.2.24/angular.js"></script>
    <script src="/lib/angular-1.2.24/angular-route.js"></script>
    <script src="/bower_components/jquery/dist/jquery.js"></script>

    <!-- UI Libs -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- App libs -->
    <script src="/app/app.js"></script>

    <script>

    </script>

    <!-- App.Controller libs -->
    <script src="/app/controllers/controllers.js"></script>

    <script src="/app/services/toolService.js"></script>

</head>


<body data-ng-controller="ToolController" >
<div ng-view></div>
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" >
                <div  id="intro-box" class="intro-message">
                    <img src="/images/pingpong.png" width="200px"/><br><br>
                    <h1><%=username%></h1><br>
                    <h2><%=win+loss%> GAMES · <%=win%> WIN · <%=loss%> LOSS</h2>
                    <h3>
                        <%
                        if((win+loss) == 0){
                        %>
                        You did not play game yet. <br> Play now!
                        <%
                        } else {
                        %>
                        Your winning rate is <%=win/(win+loss)*100%> %
                        <%
                        }
                        %></h3>
                    <br><br><br><br><br>

                    <ul class="list-inline intro-social-buttons">

                        <li>
                            <a href="/create" id="btn-sign" class="btn btn-default btn-lg"><span class="network-name"><i class="glyphicon glyphicon-plus-sign"></i> Create Room</span></a>
                        </li>
                        <li>
                            <!--<i class="fa fa-twitter fa-fw"></i>-->
                            <a href="/join" id="btn-more" class="btn btn-default btn-lg"><span class="network-name"><i class="glyphicon glyphicon-log-in"></i> Join</span></a>
                        </li>
                        <li>
                            <!--<i class="fa fa-twitter fa-fw"></i>-->
                            <a href="/tutorial" id="btn-more" class="btn btn-default btn-lg"><span class="network-name"><i class="glyphicon glyphicon-question-sign"></i> Tutorial</span></a>
                        </li>
                        <li>
                            <!--<i class="fa fa-twitter fa-fw"></i>-->
                            <a href="/logout" id="btn-more" class="btn btn-default btn-lg"><span class="network-name"><i class="glyphicon glyphicon-home"></i> Log out</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>
</body>

</html>
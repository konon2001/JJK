<!DOCTYPE html>

<!--
	This file is rendered by express.js, when the rurl /chat/123456 is visited in a browser.
	It includes jQuery, socket.io.js (it is automatically served by the socket.io library), 
	and a few more JavaScript files that you should check out.
-->

<html>

<head>

	<title>Private chat room</title>
	<script src = "http://code.jquery.com/jquery-1.7.1.js"></script>
	<link type="text/css" rel="stylesheet" href="../css/stylesheet.css" />
	<link href="http://fonts.googleapis.com/css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css">

	<script>

		function showPopup(){
			var setting = 'toolbar=0,directories=0,status=no,menubar=0,scrollbars=auto,resizable=no,height=600,width=1100,left=100,top=100';
			window.open("/game", "Play Game!", setting);
			console.log("Popup the game!!");
		}
	</script>

</head>

<body>

	<header class="banner">

		<p class="bannertext">
			<a href="/join" id="logo">
				<img src="/images/paddle.png" width="100px"/>
			</a>
		</p>

	</header>

	<section class="section">

		<!-- These elements are displayed as white info cards in the middle of the screen -->

		<div class="connected">

			<div class="infoConnected">
				<h2>You can make a room!</h2>
				<br/>

				<form class="loginForm">
					<input type="hidden" id="yourName" value=<%=username%> /><br/>
					<input type="text" id="room" placeholder="Input the room name" /><br/>
					<input type="submit" id="yourEnter" value="MAKE" />
					<a href="/main"><input type="button" id="yourEnter" value="CANCEL" /></a><br/>
					<input type="hidden" id="yourEmail" value="123"/><br/>
				</form>

			</div>

		</div>

		<div class="personinside">


			<div class="infoInside">
				<h2>Will you Chat with <span class="nickname-chat"></span> ?</h2>
				<br/>

				<form class="loginForm">
					<input type="hidden" id="hisName" value=<%=username%> /><br/>
					<input type="submit" id="hisEnter" value="YES" />
					<a href="/join"><input type="button" id="hisEnter" value="NO"/></a><br/>
20
				</form>

			</div>

		</div>

		<div class="invite-textfield">
			<br><br>
			<h1>Waiting for another friend</h1><br><br>
			<img src="/images/loader.gif" width="100px">

		</div>

		<div class="left">

			<div class="info">
				<h2><span class="nickname-left"></span> has left this chat.</h2>
				<h5>Invite somebody else by sending them this page.</h5>
			</div>

		</div>

		<div class="toomanypeople">

			<h2>Oops, you can not join this chat!</h2>
			<h5>There are already two people in it. Would you like to create a <a title="New Room" href="/create" id="room">new room</a>?</h5>

		</div>

		<div class="nomessages">

			<div class="info">
				<h2>You are chatting with <span class="nickname-chat"/>.</h2>
				<h5>Send them a message from the form below!</h5>
			</div>

		</div>

		<div class="chatscreen">

			<ul class="chats">
				<!-- The chat messages will go here -->
			</ul>

		</div>

	</section>

	<footer>

		<form id="chatform">

			<textarea id="message" placeholder="Write something.."></textarea>
			<input type="submit" id="submit" value="SEND">
			<input type="button" id="startGame" onClick="showPopup()" value="START GAME"/>

		</form>

	</footer>

	<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="../js/moment.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="../js/chat.js"></script>

</body>

</html>